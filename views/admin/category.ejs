<script>
    function edit(name , description, id) {
        $('#editCategoryModal').modal('show');


        console.log(name);
        console.log(description);
        console.log(id);

        const idInput = document.getElementById('id');
        const inputName = document.getElementById('name');
        const inputDescription = document.getElementById('description');

        inputName.value = name;
        inputDescription.value = description;

        idInput.value = id;
    }

    function editCategory() {
    const id = document.getElementById('id');
    const inputName = document.getElementById('name');
    const inputDescription = document.getElementById('description');

    var data = {
        id: id.value,
        name: inputName.value,
        description: inputDescription.value
    };

    console.log(inputName.value, inputDescription.value, 'post');
    console.log(data);

    if (data) {
        $.ajax({
            type: 'POST',
            url: '/admin/editcategory',
            data: JSON.stringify(data),
            contentType: 'application/JSON',
            success: function (res) {
                if (res.duplicate) {
                    // Handle duplicate category 
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'This category already exists!',
                    });
                } else if (res.updated) {
                    // Handle successful update
                    $('#ReloadCategory').load('/admin/category #ReloadCategory');
                } else {
                    // Handle other errors
                    console.log('Error during category update');
                }
            },
            error: function (err) {
                // Handle AJAX error
                console.error('AJAX error:', err);
            }
        });
    } else {
        console.log('Did not receive data from edit category');
    }
}

    

    function list(id)
    {
        const data = {data : id}

        console.log(data);

        if(data)
        {
            Swal.fire(
                {
                    title : 'Are you sure',
                    text : 'You want to List/Unlish category',
                    icon : 'warning',
                    showCancellation : true,
                    confirmBottonColor : '#3085d6',
                    cancelButtonColor : '#d33',
                    confirButtonText : 'yes!'
                }
            )
            .then((res) =>
            {
                if(res.isConfirmed)
                {
                    console.log("ajax");

                    $.ajax(
                        {
                            type : 'POST',
                            url : '/admin/list-unlist',
                            data : JSON.stringify(data),
                            contentType : 'application/JSON',
                            success : (res) =>
                            {
                                if(res.listed)
                                {
                                    $('#Reload').load('/admin/category #Reload');
                                }
                            }
                        }
                    )
                }
                else
                {
                    console.log("error in list");
                }
            })
            .catch((err) =>
            {
                console.log(err);
            })
        }
    }

</script>

