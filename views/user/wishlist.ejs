    <!-- Shopping Cart Section Begin -->
    <section class="shopping-cart spad" id="reloadDiv">
      <% if(product && product.length > 0){ %>

        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shopping__cart__table" id="Reload">
                        <table>
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Added On</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                   <% product.forEach((item,i) =>{ %>
                                    <tr>
                                        <td class="product__cart__item">
                                            <div class="product__cart__item__pic">
                                                <img class="" style="width: 100px; height: 100px;" src="/static/img/productImage/sharp/<%= item.productId.variant[item.index].images[0] %>" alt="">
                                            </div>
                                            <div class="product__cart__item__text">
                                                <h6 style="font-size: 12px;"><%= item.productId.name %></h6>
                                                <h5 style="font-size: 15px;">₹<%= item.productId.variant[item.index].price %></h5>
                                                <h5 style="font-size: 15px;"><%= item.productId.variant[item.index].color %></h5>
                                                <h5 style="font-size: 15px; color: red;">Only <%= item.productId.variant[item.index].quantity %> Left!</h5>
                                            </div>
                                        </td>
                                        
                                        <% const formattedDate = item.addedOn.toLocaleString('en-US', { weekday: 'short', month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric', hour12: true }); %>

                                        <td>
                                            <%= formattedDate %>
                                        </td>
                                        
                                        <td class="cart__close" >
                                            <button class="btn btn-danger btn-block mt-2" onclick="removeWishlist('<%= item.productId._id %>','<%=item.index%>')">Remove</button>
                                        </td>
                                    </tr>
    
                                   <% }) %>
                                
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="continue__btn">
                                <a class="btn btn-outline-dark" href="/shop">Continue Shopping</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

      <% }else{ %>
        <div style="display: flex; justify-content: center; align-items: center; height: 30rem;">
            <div style="text-align: center;">
                <img src="/assets/img/wishlist.png" alt="Empty Cart Image" style="width: 400px; height: 300px; margin-bottom: 20px;">
